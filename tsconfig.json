{
    "compilerOptions": {
        "types": [
            "node",
            "jest"
        ],
        "module": "commonjs",
        "target": "ES2020",
        "esModuleInterop": true,
        "strict": true,
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "exclude": [
        "dist/**/*",
        "src/client.ts"
    ]
}